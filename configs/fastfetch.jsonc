{
  "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json",
  "logo": {
    "type": "auto",
    "source": "nixos",
    "padding": { "top": 0, "left": 2 },
  },

  "modules": [
    "title",
    { "type": "custom", "format": "──────────────────────────────" },
    "host",
    "os",
    "kernel",
    "wm",
    "terminal",
    "shell",
    "gpu",
    { "type": "cpu", "format": "{name}" },
    "memory",
    "swap",
    "disk",
    "uptime"
  ],
}